<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Mediaplayer2.ViewModels"
        xmlns:views="clr-namespace:Mediaplayer2.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="759"
        x:Class="Mediaplayer2.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Mediaplayer2"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
        SystemDecorations="None">
    <!--Главный Grid-->
    <Grid RowDefinitions="Auto,*,5"
          ColumnDefinitions="5,*,5"
          ShowGridLines="False">
            <!--Панель с контентом-->
            <Panel Grid.Column="0"
                   Grid.Row="0"
                   Grid.ColumnSpan="3"
                   Grid.RowSpan="3">
                    <views:MusicPageView/>
            </Panel>
            <!--Изменение размеров окна. Часть первая-->
            <Border Name="BottomLeft"
                    Background="Transparent"
                    Grid.Row="2"/>
            <Border Name="BottomRight"
                    Background="Transparent"
                    Grid.Column="2"
                    Grid.Row="2"/>
            <Border Name="Right"
                    Background="Transparent"
                    Grid.Column="2"
                    Grid.Row="1"/>
            <Border Name="Bottom"
                    Background="Transparent"
                    Grid.Column="1"
                    Grid.Row="2"/>
            <Border Name="Left"
                    Background="Transparent"
                    Grid.Row="1"/>
            <!--Панель управления окном-->
            <DockPanel Grid.Row="0"
                       Grid.ColumnSpan="3">
                    <Grid Name="WindowBar"
                          Background="#FF595E"
                          DockPanel.Dock="Top"
                          ColumnDefinitions="Auto,*,Auto"
                          PointerPressed="InputElement_OnPointerPressed">
                            <DockPanel Margin="5 0 0 0">
                                    <Image Source="../Assets/wNew3.png"
                                           Height="20"/>
                                    <TextBlock VerticalAlignment="Center"
                                               Margin="5 0 0 0"
                                               Text="Медиаплеер"
                                               Foreground="White"/>
                            </DockPanel>
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal">
                                    <StackPanel.Styles>
                                            <Style Selector="Button">
                                                    <Setter Property="Margin" Value="2"/>
                                            </Style>
                                    </StackPanel.Styles>
                                    <Button Name="MinimizeWindow"
                                            Classes="WindowBar">
                                            <Image Source="../Assets/roll.png"
                                                   Height="20"/>
                                    </Button>
                                    <Button Name="NormalWindow"
                                            Classes="WindowBar"
                                            IsVisible="False">
                                            <Image Source="../Assets/minimize.png"
                                                   Height="20"/>
                                    </Button>
                                    <Button Name="MaximizeWindow"
                                            Classes="WindowBar">
                                            <Image Source="../Assets/maximise.png"
                                                   Height="20"/>
                                    </Button>
                                    <Button Name="CloseWindow"
                                            Classes="CloseButton">
                                            <Image Source="../Assets/close.png"
                                                   Height="20"/>
                                    </Button>
                            </StackPanel>
                    </Grid>
            </DockPanel>
            <!--Изменение размеров окна. Часть вторая-->
            <Border Name="TopLeft"
                    Background="Transparent"/>
            <Border Name="TopRight"
                    Background="Transparent"
                    Grid.Column="2"/>
            <Border Name="Top"
                    Background="Transparent"
                    Grid.Column="1"
                    Height="4"
                    VerticalAlignment="Top"/>
    </Grid>
</Window>
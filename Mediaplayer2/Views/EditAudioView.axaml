<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Mediaplayer2.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="759"
             x:DataType="vm:EditAudioViewModel"
             x:Class="Mediaplayer2.Views.EditAudioView">
    <!--DataContext-->
    <UserControl.DataContext>
        <vm:EditAudioViewModel/>
    </UserControl.DataContext>
    <!--Главный Grid-->
    <Grid ShowGridLines="False"
          RowDefinitions="Auto,*,Auto"
          Background="#f5efef">
        <!--Grid для заголовка-->
        <Grid Grid.Row="0"
              ColumnDefinitions="*,13*"
              ShowGridLines="False">
            <!--Заголовок-->
            <StackPanel Grid.Column="1"
                        Grid.Row="0"
                        Orientation="Vertical"
                        Margin="30 50 0 0"
                        VerticalAlignment="Center">
                <!--Главный титл (для названия)-->
                <TextBlock Text="{Binding Main}"
                           FontSize="40"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <!--Второй титл (для исполнителя)-->
                <TextBlock Text="{Binding PreMain}"
                           FontSize="20"
                           FontWeight="Bold"/>
            </StackPanel>
            <!--Кнопка для загрузки аудио-файла-->
            <Button Grid.Column="1"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    VerticalContentAlignment="Center"
                    Margin="24"
                    Content="Загрузить аудио"
                    Background="#FF595E"
                    CornerRadius="10"
                    Command="{Binding }"/>
        </Grid>
        <!--Grid для изображения (обложка трека)-->
        <Grid Grid.Row="1"
              ColumnDefinitions="*,13*"
              ShowGridLines="False">
            <!--Изображение (обложка трека)-->
            <Grid Grid.Column="1"
                  RowDefinitions="*,*,*,*">
                <!--Полоса прокрутки-->
                <Slider Grid.Row="0"
                        Name="PlaybackSlider"
                        Minimum="0"
                        Maximum="{Binding }"
                        Value="{Binding }"
                        Margin="10,0,10,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Background="Black"
                        Foreground="#FF595E">
                </Slider>
                <!--Управление треком (назад на 10 секунд, играть/стоп, вперёд на 10 секунд)-->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="10">
                    <!--Кнопка "Назад на 10 секунд"-->
                    <Button Name="BackwardButton"
                            HorizontalAlignment="Stretch"
                            Classes="LeftPanel"
                            Command="{Binding }">
                        <Image Source="../Assets/BackTimeRed.png"
                               MaxWidth="50" 
                               MinWidth="20"/>
                    </Button>
                    <!--Кнопка "Играть/стоп"-->
                    <Button Name="PlayButton"
                            HorizontalAlignment="Stretch"
                            Classes="LeftPanel"
                            Command="{Binding }">
                        <Image Source="{Binding }"
                               Width="35"
                               MaxWidth="50" 
                               MinWidth="20"/>
                    </Button>
                    <!--Кнопка "Вперёд на 10 секунд"-->
                    <Button Name="ForwardButton"
                            HorizontalAlignment="Stretch"
                            Classes="LeftPanel"
                            Command="{Binding }">
                        <Image Source="../Assets/ForeTimeRed.png"
                               MaxWidth="50" 
                               MinWidth="20"/>
                    </Button>
                </StackPanel>
                <!--Управление треком (назад на 10 секунд, играть/стоп, вперёд на 10 секунд)-->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="10">
                    <TextBlock Text="{Binding Start}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <!--Полоса прокрутки-->
                    <Slider Minimum="0"
                            Maximum="{Binding }"
                            Value="{Binding }"
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Background="Black"
                            Foreground="#FF595E">
                    </Slider>
                    <TextBlock Text="{Binding StartTime}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                </StackPanel>
                <!--Управление треком (назад на 10 секунд, играть/стоп, вперёд на 10 секунд)-->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="10">
                    <TextBlock Text="{Binding Start}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <!--Полоса прокрутки-->
                    <Slider Minimum="0"
                            Maximum="{Binding }"
                            Value="{Binding }"
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Background="Black"
                            Foreground="#FF595E">
                    </Slider>
                    <TextBlock Text="{Binding StartTime}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                </StackPanel>
            </Grid>
        </Grid>
        <!--Grid для нижней панели-->
        <Grid Grid.Column="0"
              Grid.Row="2"
              RowDefinitions="*,*"
              ShowGridLines="False">
            
            
            <!--Управление треком (добавить в плейлист/убрать из плейлиста, информация о треке, уровень громкости)-->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 0 10 0"
                        Spacing="10">
                <!--Кнопка "Добавить в плейлист/убрать из плейлиста"-->
                <Button Name="PlusInPlaylistButton"
                        HorizontalAlignment="Stretch"
                        Classes="LeftPanel">
                    <Image Source="../Assets/AddRed.png"
                           MaxWidth="50" 
                           MinWidth="20"/>
                </Button>
                <!--Кнопка "Информация о треке"-->
                <Button Name="InformButton"
                        HorizontalAlignment="Stretch"
                        Classes="LeftPanel">
                    <Image Source="../Assets/InformRed.png"
                           MaxWidth="50"
                           MinWidth="20"/>
                </Button>
                <!--Кнопка "Звук выключить/включить"-->
                <Button Name="VolumeButton"
                        HorizontalAlignment="Stretch"
                        Classes="LeftPanel"
                        Command="{Binding}">
                    <Image Source=""
                           MaxWidth="50" 
                           MinWidth="20"/>
                </Button>
                <!--Полоса регулирования громкости-->
                <Slider Name="VolumeSlider"
                        Minimum="0"
                        Maximum="1"
                        Value=""
                        Width="200"
                        VerticalAlignment="Center"
                        Background="Black"
                        Foreground="#FF595E">
                </Slider>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
